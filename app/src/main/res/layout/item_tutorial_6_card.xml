<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_title"
            android:text="@string/card_tutorial_5_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/roboto_bold"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/disabled500"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/view_dashed"
            android:layout_marginTop="14dp"
            android:layerType="software"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_title"
            android:layout_height="2dp"
            android:src="@drawable/bg_dashed"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:id="@+id/image_mailopen"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_dashed"
            android:layout_marginTop="44dp"
            app:srcCompat="@drawable/ic_mailopen" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_below="@+id/image_mailopen"
            android:layout_width="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/text_mailopen_description"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:lineSpacingExtra="4sp"
            android:text="@string/card_tutorial_6_description_mailopen"
            />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:id="@+id/image_refreshbrowser"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_mailopen_description"
            android:layout_marginTop="44dp"
            app:srcCompat="@drawable/ic_refreshbrowser" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_below="@+id/image_refreshbrowser"
            android:layout_width="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:lineSpacingExtra="4sp"
            android:text="@string/card_tutorial_6_description_refreshbrowser"
            />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_continue"
            style="@style/WavesButton"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/card_tutorial_next"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>