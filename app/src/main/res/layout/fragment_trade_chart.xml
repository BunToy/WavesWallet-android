<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_marginTop="18dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="8dp"
        android:id="@+id/card_content"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        android:layout_marginBottom="-2dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:background="@color/basic50"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/text_change_time"
                    android:textColor="@color/basic500"
                    android:layout_width="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="Time M5"
                    android:textSize="11sp"
                    android:drawablePadding="8dp"
                    android:drawableEnd="@drawable/ic_changearrows_14_basic_500"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/text_full"
                    android:textColor="@color/basic500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:textSize="11sp"
                    android:drawablePadding="8dp"
                    android:drawableEnd="@drawable/ic_sizefull_14_basic_500"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/accent50"/>

            <com.wavesplatform.wallet.v1.ui.dex.details.chart.CustomCandleChart
                android:id="@+id/candle_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.wavesplatform.wallet.v1.ui.dex.details.chart.CustomBarChart
                android:id="@+id/bar_chart"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="-5dp" />

        </LinearLayout>


        <include
            android:visibility="gone"
            android:id="@+id/layout_empty"
            layout="@layout/layout_empty_data"/>

    </android.support.v7.widget.CardView>



</RelativeLayout>
