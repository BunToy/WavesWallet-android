<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:id="@+id/relative_root"
    android:layout_height="match_parent"
    android:background="@drawable/img_brand">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_view"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true" />

    <android.support.v7.widget.CardView
        android:layout_marginTop="28dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/card_content"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_content"
            android:translationY="-40dp"
            android:alpha="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_language"
                android:layout_marginTop="8dp"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_above="@id/button_confirm"
                android:layout_marginBottom="24dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/button_confirm"
                style="@style/WavesButton"
                android:layout_gravity="bottom"
                android:text="@string/choose_language_confirm"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
