<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <TextView
            android:id="@+id/text_title"
            android:text="@string/tutorial_card_2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="10sp"
            android:textColor="#999999"
            android:textSize="14sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/view_dashed"
            android:layout_marginTop="14dp"
            android:layerType="software"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_title"
            android:layout_height="2dp"
            android:src="@drawable/bg_dashed"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:id="@+id/image_anonim"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_dashed"
            android:layout_marginTop="44dp"
            app:srcCompat="@drawable/ic_anonim" />

        <TextView
            android:layout_below="@+id/image_anonim"
            android:layout_width="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/text_anonim_description"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:lineSpacingExtra="4sp"
            android:text="@string/card_tutorial_3_description_anonim"
            />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:id="@+id/image_passbrowser"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_anonim_description"
            android:layout_marginTop="44dp"
            app:srcCompat="@drawable/ic_passbrowser" />

        <TextView
            android:layout_below="@+id/image_passbrowser"
            android:layout_width="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:lineSpacingExtra="4sp"
            android:text="@string/card_tutorial_3_description_passbrowser"
            />


        <Button
            android:id="@+id/button_continue"
            style="@style/WavesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:enabled="false"
            android:text="@string/card_tutorial_next"
            android:textStyle="bold" />


    </RelativeLayout>

</android.support.v7.widget.CardView>