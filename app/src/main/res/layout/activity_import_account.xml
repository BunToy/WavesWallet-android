<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:fontFamily="@font/roboto"
        app:titleTextAppearance="@style/Toolbar.Title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_view"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="30dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/image_circle_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_circle_basic100"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:paddingTop="2dp"
            android:text="1"
            android:textSize="12sp"
            app:fontFamily="@font/roboto_bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_first_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/image_circle_first"
            android:text="@string/import_account_login_at_site"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_first_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_first_title"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/image_circle_first"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/disabled500"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="@string/import_account_settings_gt_security_gt_pairing_code" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/image_circle_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_first_description"
            android:layout_marginTop="26dp"
            android:background="@drawable/shape_circle_basic100"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:paddingTop="2dp"
            android:text="2"
            android:textSize="12sp"
            app:fontFamily="@font/roboto_bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_first_description"
            android:layout_marginStart="14dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/image_circle_second"
            android:text="@string/import_account_click_show_pairing"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/view_line_3"
            android:layout_below="@+id/text_second_title"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/dotted_line"
            android:layerType="software" />

    </RelativeLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_scan"
        style="@style/WavesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_enter_manually"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/import_account_scan_pairing_code" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_enter_manually"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="17dp"
        android:stateListAnimator="@null"
        android:text="@string/import_account_enter_seed_manually"
        android:textAllCaps="false"
        android:textColor="@color/submit400"
        android:textSize="14sp" />


</RelativeLayout>
