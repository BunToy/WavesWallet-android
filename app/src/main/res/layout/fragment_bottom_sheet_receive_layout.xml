<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_received_from_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_details_received_from"
            android:textColor="@color/basic500" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_received_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_received_from_hint"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/image_add_address_submit_300"
            android:singleLine="true"
            android:text="96AFUzFKebbwmJulY6evx9GrfYBkmn8LcUL0"
            android:textColor="@color/disabled900" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_add_address_submit_300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_received_from"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_add_address_submit_300" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/dotted_line" />
</LinearLayout>
